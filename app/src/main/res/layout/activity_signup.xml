<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbackground">

    <ImageView
        android:id="@+id/image"
        android:layout_width="307dp"
        android:layout_height="222dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/google3"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/username"
        android:layout_width="299dp"
        android:layout_height="53dp"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="-123dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:hint="Username"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/password"
        android:layout_width="299dp"
        android:layout_height="53dp"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="-180dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_marginEnd="-292dp"
        android:layout_marginRight="-292dp"
        android:layout_marginBottom="-130dp"
        android:layout_toStartOf="@+id/password"
        android:layout_toLeftOf="@+id/password"
        android:background="@drawable/buttoncorner"
        android:text="SIGN UP" />

    <EditText
        android:id="@+id/conformpassword"
        android:layout_width="299dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="-237dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:hint="Comfirm Password"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="-54dp"
        android:fontFamily="cursive"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />


</RelativeLayout>
